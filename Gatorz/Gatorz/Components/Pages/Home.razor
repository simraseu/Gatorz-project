    // Mock data for popular destinations
    private List<DestinationModel> popularDestinations = new List<DestinationModel>
    {
        new DestinationModel
        {
            Name = "Barcelona",
            Description = "Experience the Catalan capital with amazing architecture and beach life.",
            Price = 2499,
            ImageUrl = "/images/barcelona.jpg"
        },
        new DestinationModel
        {
            Name = "Rome",
            Description = "Explore the eternal city with historical sights and exquisite food.",
            Price = 2899,
            ImageUrl = "/images/rome.jpg"
        },
        new DestinationModel
        {
            Name = "Dubai",
            Description = "Luxury in the desert with impressive skyscrapers and exclusive shopping.",
            Price = 3999,
            ImageUrl = "/images/dubai.jpg"
        }
    };

