@page "/search"
@using Gatorz.Models
@using Gatorz.Services
@inject IFlightService FlightService
@inject IHotelService HotelService

<h3>Search for Travel</h3>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="origin">From:</label>
            <input id="origin" class="form-control" @bind="Origin" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="destination">To:</label>
            <input id="destination" class="form-control" @bind="Destination" />
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <div class="form-group">
            <label for="departureDate">Departure Date:</label>
            <input id="departureDate" type="date" class="form-control" @bind="DepartureDate" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="returnDate">Return Date:</label>
            <input id="returnDate" type="date" class="form-control" @bind="ReturnDate" />
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <button class="btn btn-primary" @onclick="SearchTravel">Search</button>
    </div>
</div>

@if (IsLoading)
{
    <div class="mt-4">
        <p>Searching for travel options...</p>
    </div>
}

@if (Flights != null && Flights.Any())
{
    <h4 class="mt-4">Available Flight Routes</h4>
    <div class="row">
        @foreach (var flight in Flights)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@flight.Airline - @flight.FlightNumber</h5>
                        <p class="card-text">
                            From: @flight.DepartureAirport (@flight.DepartureTime.ToString("dd/MM HH:mm"))<br />
                            To: @flight.ArrivalAirport (@flight.ArrivalTime.ToString("dd/MM HH:mm"))
                        </p>
                        <p class="card-text"><strong>Price: $@flight.Price</strong></p>
                        <button class="btn btn-sm btn-outline-primary">Select</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private string Origin { get; set; } = string.Empty;
    private string Destination { get; set; } = string.Empty;
    private DateTime DepartureDate { get; set; } = DateTime.Now.AddDays(1);
    private DateTime ReturnDate { get; set; } = DateTime.Now.AddDays(8);
    private bool IsLoading { get; set; } = false;
    private List<FlightInfo> Flights { get; set; } = new();

    private async Task SearchTravel()
    {
        IsLoading = true;
        Flights = await FlightService.SearchFlightsAsync(Origin, Destination, DepartureDate);
        IsLoading = false;
    }
}